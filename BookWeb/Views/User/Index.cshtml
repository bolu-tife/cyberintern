@model IEnumerable<BookWeb.Entities.Author>
@{
    ViewData["Title"] = "Authors";
}
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Authors</h3>
    </div>
  <!--<div class="col-md-7 align-self-center">
       <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
    </div>-->
</div>

<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">List</h4>
                <!-- <h6 class="card-subtitle">Add New Author</h6>-->
                <div class="col-md-12 col-12 align-self-center">
                    <a asp-controller="Author" asp-action="Create" class="btn float-right hidden-sm-down btn-primary"><i class="mdi mdi-plus-circle"></i>New Author</a>
                </div>
                <div class="table-responsive">
                    <table class="table v-middle">
                        <thead>
                            <tr class="bg-light">
                                <th class="border-top-0">ID</th>
                                <th class="border-top-0">Title</th>
                                <th class="border-top-0">Name</th>
                                <th class="border-top-0">CreatedBy</th>
                                <th class="border-top-0">Date Created</th>
                                <th class="border-top-0"></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model)
                            {
                                <tr>
                                    <td>@author.Id</td>
                                    <td>@author.Title </td>
                                    <td>@author.Name  </td>
                                    <td>@author.CreatedBy  </td>
                                    <td>@author.DateCreated    </td>

                                    <td>

                                        <a class="btn btn-success btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="Edit" asp-action="Edit" asp-route-id="@author.Id" alt="Edit"><i class=" fa fa-edit" aria-hidden="true"></i></a>
                                    
                                        <a class="btn btn-danger btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="Delete" asp-action="Delete" asp-route-id="@author.Id" onclick="return confirm('Are you sure you want to Delete this user: @author.Name')">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                   
                </div>
            </div>
        </div>
    </div>
</div>


                           